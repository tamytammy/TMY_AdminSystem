<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<!-- ✅ 資料庫連線字串 -->
	<connectionStrings>
		<add name="TMY_DB"
			 connectionString="Data Source=SERVER_IP;Initial Catalog=YOUR_DB_NAME;User ID=YOUR_USER_ID;Password=YOUR_PASSWORD"
			 providerName="System.Data.SqlClient" />
	</connectionStrings>

	<!-- ✅ 網站參數 -->
	<appSettings>
		<add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
	</appSettings>

	<system.web>

		<!-- ✅ 設定登入流程（Login.aspx） -->
		<authentication mode="Forms">
			<forms loginUrl="~/Login.aspx" timeout="60" />
		</authentication>



		<!-- ✅ 請先用 Off 以便看到錯誤訊息（上線前要改成 On） -->
		<customErrors mode="Off" />

		<!-- ✅ 啟用 Session 狀態 -->
		<sessionState mode="InProc" timeout="20" />

		<!-- ✅ 支援舊版 Web Forms -->
		<compilation debug="true" targetFramework="4.5" />
		<httpRuntime targetFramework="4.5" requestValidationMode="2.0"/>

	</system.web>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Microsoft.Web.Infrastructure"
								  publicKeyToken="31bf3856ad364e35" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-2.0.0.0" newVersion="2.0.0.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>
	<!-- ✅ 預設啟動頁面設定 -->
	<system.webServer>
		<defaultDocument>
			<files>
				<clear />
				<add value="Login.aspx" />
			</files>
		</defaultDocument>
	</system.webServer>
	<system.webServer>
		<validation validateIntegratedModeConfiguration="false" />
	</system.webServer>
</configuration>
